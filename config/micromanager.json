{
  "deviceId": "micromanager-001",
  "posType": "verifone_commander",
  "serialPort": "/dev/ttyUSB0",
  "baudRate": 9600,
  "storeId": "store-123",
  "storeNumber": "001",
  "posTerminalId": "terminal-456",
  "parserVersion": "1.0.0",
  
  "supabase": {
    "url": "https://your-project.supabase.co",
    "key": "your-supabase-anon-key"
  },
  
  "frigate": {
    "baseUrl": "http://localhost:5000",
    "cameraName": "pos_camera"
  },
  
  "backup": {
    "logDirectory": "./transaction-logs",
    "retentionDays": 30
  },
  
  "logging": {
    "level": "info",
    "console": true,
    "file": "./logs/micromanager.log",
    "maxSize": "10m",
    "maxFiles": 5
  },
  
  "posTypes": {
    "verifone_commander": {
      "name": "Verifone Commander",
      "transaction": {
        "maxDelayMs": 5000,
        "patterns": {
          "lineItem": "^(.+?)\\s+(\\d+\\.\\d{2})$",
          "total": "^TOTAL\\s+(\\d+\\.\\d{2})$",
          "subtotal": "^SUBTOTAL\\s+(\\d+\\.\\d{2})$",
          "tax": "^TAX\\s+(\\d+\\.\\d{2})$",
          "cash": "^CASH\\s+(\\d+\\.\\d{2})$",
          "change": "^CHANGE\\s+(\\d+\\.\\d{2})$",
          "credit": "^CREDIT\\s+(\\d+\\.\\d{2})$",
          "debit": "^DEBIT\\s+(\\d+\\.\\d{2})$",
          "transactionNumber": "^TXN#\\s*(\\d+)",
          "cashier": "^CASHIER:\\s*(.+)$",
          "terminal": "^TERMINAL:\\s*(\\d+)$",
          "drawer": "^DRAWER:\\s*(\\d+)$",
          "void": "^VOID",
          "refund": "^REFUND",
          "noSale": "^NO SALE",
          "endTransaction": "^(THANK YOU|HAVE A NICE DAY|RECEIPT TOTAL).*$"
        },
        "lineTypes": {
          "item": ["ITEM", "PRODUCT", "SKU"],
          "payment": ["CASH", "CREDIT", "DEBIT", "CHECK", "CARD"],
          "tax": ["TAX", "HST", "GST", "PST"],
          "discount": ["DISCOUNT", "COUPON", "PROMO"],
          "total": ["TOTAL", "SUBTOTAL"],
          "void": ["VOID", "CANCEL"],
          "refund": ["REFUND", "RETURN"]
        },
        "controlCharsSequence": "",
        "lineStripChars": 0,
        "encoding": "utf8"
      },
      "serial": {
        "dataBits": 8,
        "stopBits": 1,
        "parity": "none",
        "rtscts": false,
        "xon": false,
        "xoff": false,
        "xany": false
      }
    }
  }
}
